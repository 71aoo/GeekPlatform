<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.syclover.geekPlatform.dao.UserMapper">
    
    <resultMap id="allColumnsMapper" type="com.syclover.geekPlatform.entity.User">
        <result column="id" property="id"/>
        <result column="real_name" property="realName"/>
        <result column="student_id" property="studentId"/>
        <result column="is_cuit" property="isCuit"/>
        <result column="motto" property="motto"/>
        <result column="header_img" property="headerImg"/>
        <result column="is_del" property="isDel"/>
        <result column="team_id" property="teamId"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
    </resultMap>
    
    <resultMap id="loginMapper" type="com.syclover.geekPlatform.entity.User">
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="is_cuit" property="isCuit"/>
        <result column="team_id" property="teamId"/>
    </resultMap>
    
    <!--根据id查找user-->
    <select id="getUserById" resultMap="allColumnsMapper">
        select * from Users where id = #{id}
    </select>
    
    <!-- 查找所有的user -->
    <select id="getAllUser" resultMap="allColumnsMapper">
        select * from Users
    </select>

    <!-- 登陆返回的User    -->
    <select id="getUserByUsername" resultMap="allColumnsMapper">
        select * from Users where username = #{username}
    </select>

    <!-- 添加注册用户-->
    <insert id="addUser">
        insert into Users (username,password,is_cuit) values (#{user.username},#{user.password},#{user.isCuit})
    </insert>

<!--    更新用户的队伍 之后更新全字段-->
    <insert id="updateTeam">
        update Users set team_id = #{teamid} where id = #{id}
    </insert>
</mapper>