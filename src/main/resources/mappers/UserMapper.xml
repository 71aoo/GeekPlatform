<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.syclover.geekPlatform.dao.UserMapper">

    <resultMap id="allColumnsMapper" type="com.syclover.geekPlatform.entity.User">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="real_name" property="realName"/>
        <result column="student_id" property="studentId"/>
        <result column="is_cuit" property="isCuit"/>
        <result column="motto" property="motto"/>
        <result column="header_img" property="headerImg"/>
        <result column="is_del" property="isDel"/>
        <result column="points" property="points"/>
        <result column="team_id" property="teamId"/>
        <result column="created_time" property="createdTime"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="last_points_time" property="lastPointsTime"/>

    </resultMap>

    <resultMap id="loginMapper" type="com.syclover.geekPlatform.entity.User">
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="is_cuit" property="isCuit"/>
        <result column="team_id" property="teamId"/>
    </resultMap>

    <resultMap id="idMapper" type="com.syclover.geekPlatform.entity.User">
        <result column="id" property="id"/>
    </resultMap>

    <!--    UserBean信息类-->
    <resultMap id="userBeanMapper" type="com.syclover.geekPlatform.bean.MyUserBean">
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="is_cuit" property="isCuit"/>
        <result column="team_id" property="teamId"/>
    </resultMap>

    <!--根据id查找user-->
    <select id="getUserById" resultMap="allColumnsMapper">
        select * from Users where id = #{id}
    </select>

    <!-- 查找所有的user -->
    <select id="getAllUser" resultMap="allColumnsMapper">
        select * from Users
    </select>

    <!-- 登陆返回的User    -->
    <select id="getUserByUsername" resultMap="allColumnsMapper">
        select * from Users where username = #{username}
    </select>

    <!-- 通过邮箱得到User   -->
    <select id="getUserByEmail" resultMap="allColumnsMapper">
        select * from Users where email = #{email}
    </select>

    <!-- 通过邮箱拿UserBean  -->
    <select id="getUserBeanByEmail" resultMap="userBeanMapper">
        select * from Users where email = #{email} and is_del = 0;
    </select>

    <!-- 添加注册用户-->
    <insert id="addUser">
        insert into Users (username,password,is_cuit,email,auth_token) values (#{user.username},#{user.password},#{user.isCuit},#{user.email},#{user.authToken})
    </insert>

    <!--    更新用户的队伍 之后更新全字段-->
    <insert id="updateTeam">
        update Users set team_id = #{teamid} where id = #{id}
    </insert>

    <select id="getLastUserId" resultMap="idMapper">
        select id from Users order by id desc limit 1
    </select>

    <!--    激活邮箱-->
    <update id="activeEmail">
        update Users set is_auth_email = 1 where auth_token = #{token} and is_del = 0
    </update>

    <!--    更新用户token-->
    <update id="updateToken">
        update Users set auth_token = #{token} where id = #{id} and is_del = 0
    </update>


    <!--    拿去用户验证信息类Userbean-->
    <select id="getUserBeanByUsername" resultMap="userBeanMapper">
        select username,password,is_cuit,team_id from Users where username = #{username} and is_del = 0
    </select>

    <update id="updateAll">
        update Users set motto = #{user.motto},header_img = #{user.header_img},is_cuit = #{user.isCuit} where id = #{user.id} and is_del = 0;
    </update>
</mapper>